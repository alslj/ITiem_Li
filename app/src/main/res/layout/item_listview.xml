<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_list_cover"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/pg3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="生日"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/list_text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2020年13月66号"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/list_text_haiyou"
        android:text="只剩"
        android:textColor="#ffffff"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/list_text_countday"
        android:textColor="#ffffff"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:text="29天"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#2C00FFFF"/>


</FrameLayout>